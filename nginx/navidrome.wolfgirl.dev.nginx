upstream navidrome {
	server mammal:4533;
	keepalive 64;
}

server {
	server_name navidrome.wolfgirl.dev;

	listen [::]:443;
	listen 443;
	ssl_certificate    	/etc/letsencrypt/live/navidrome.wolfgirl.dev/fullchain.pem;
	ssl_certificate_key	/etc/letsencrypt/live/navidrome.wolfgirl.dev/privkey.pem;
	include /etc/letsencrypt/options-ssl-nginx.conf;
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

	location / {
		proxy_pass http://navidrome/;
		add_header X-Frame-Options SAMEORIGIN;
		add_header X-XSS-Protection "1; mode=block";
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header X-Forwarded-Port $server_port;
		proxy_read_timeout 90;
	}
}

server {
	listen [::]:80;
	listen 80;

	server_name navidrome.wolfgirl.dev;
	if ($host ~ ^navidrome\.wolfgirl\.dev$) {
		return 301 https://$host$request_uri;
	}

	return 404;
}
